<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CraneInfoView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6D7AA"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="205dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Add Crane"
            android:textSize="64dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/cranecard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Model :"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editcranemodel"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"

                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Location :"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editcranelocation"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Capacity (t) :"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editcranecapacity"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />

                <EditText
                    android:id="@+id/cranestatus"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Fly jib (m):"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editcraneflyjib"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Boom length(m) :"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editcraneboomlength"
                    android:layout_width="288dp"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Status :"
                    android:textSize="35dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/editstatus"
                    android:layout_width="288dp"
                    android:layout_height="78dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="35dp" />


            </LinearLayout>

            <Button
                android:id="@+id/addcrane"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:text="Add"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"/>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>
